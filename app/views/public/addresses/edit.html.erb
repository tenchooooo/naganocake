<div class="container">
  <h2>配送先編集</h2>
  <%= form_with model: @address, url: address_path, method: :patch do |f| %>
  <table class="table table-borderless">
    <tr><th>郵便番号（ハイフンなし）</th><td><%= f.text_field :postal_code %></td></tr>
    <tr><th>住所</th><td><%= f.text_field :address, class:'col-12' %></td></tr>
    <tr><th>宛名</th><td><%= f.text_field :name %><%= f.submit "変更内容を保存", class:'btn btn-success ml-5' %></td></tr>
  </table>
  <% end %>
</div>

