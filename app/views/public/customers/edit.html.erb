<div class="container">
  <h2>会員情報編集</h2>
  <div class="row">
    <%= form_with model: @customer, url: customers_my_page_path, method: :patch do |f| %>
    <table class="table table-borderless">
      <tr><th>氏名</th><td><%= f.text_field :last_name %><%= f.text_field :first_name, class:'ml-4' %></td></tr>
      <tr><th>フリガナ</th><td><%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana, class:'ml-4' %></td></tr>
      <tr><th>郵便番号</th><td><%= f.text_field :postal_code %></td></tr>
      <tr><th>住所</th><td><%= f.text_field :address, class:'col-12' %></td></tr>
      <tr><th>電話番号</th><td><%= f.text_field :telephone_number %></td></tr>
      <tr><th>メールアドレス</th><td><%= f.text_field :email %></td></tr>
      <tr><th></th><td><%= f.submit "編集内容を保存",class:'btn btn-success' %><%= link_to "退会する", customers_unsubscribe_path, class:'btn btn-danger ml-5' %></td></tr>
    </table>
    <% end %>
  </div>
</div>

