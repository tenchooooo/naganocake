<h2>新着商品</h2>
<% @items.each do |item| %>
<% if item.is_active == true %>
<%= link_to item_path(item.id) do %>
  <%= attachment_image_tag item, :image, format: 'jpeg', size: '200x125' %> <br>
<% end %>
<%= item.name %><br>
<%= item.price %> <br>
<% end %>
<% end %>
<%= link_to "すべての商品を見る＞", items_path %>
