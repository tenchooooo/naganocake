<div class="container">
  <div class="row align-items-end mb-5">
    <h2 class="mr-4">商品一覧</h2>
    <p>(全<%= @items.count %>件)</p>
  </div>
  <div class="row">
    <% @items.each do |item| %>
    <div class="col-3">
      <div class="card-borderless mb-5">
        <% if item.is_active == true %>
        <%= link_to item_path(item.id) do %>
          <%= attachment_image_tag item, :image, format: 'jpeg', size: '250x180' %> <br>
        <% end %>
        <%= item.name %><br>
        <%= item.price %> <br>
        <% end %>
      </div>
    </div>
    <% end %>
    <%= paginate @items %>
  </div>
</div>


