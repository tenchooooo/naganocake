<div class="container">
  <h2>新規会員登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
    <table class="table table-borderless">
      <div class="row">
        <tr>
          <th>名前</th>
          <td>
            <%= f.label "(姓）" %><%= f.text_field :last_name, autofocus: true %>
            <%= f.label "(名）" %><%= f.text_field :first_name, autofocus: true %>
          </td>
        </tr>
      </div>
      <div class="row">
        <tr>
          <th>フリガナ</th>
          <td>
            <%= f.label "(セイ）" %>
            <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
            <%= f.label "(メイ）" %>
            <%= f.text_field :first_name_kana, autofocus: true, autocomplete: " first_name_kana" %>
          </td>
        </tr>
      </div>
      <div class="row">
        <tr>
          <th><%= f.label "メールアドレス" %></th>
          <td>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </td>
        </tr>
      </div>
      <div class="row">
        <tr>
          <th><%= f.label "郵便番号" %></th>
          <td>
            <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
          </td>
        </tr>
      </div>
      <div class="row">
        <tr>
          <th><%= f.label "住所" %></th>
          <td>
            <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
          </td>
        </tr>
      </div>
      <div class="row">
        <tr>
          <th><%= f.label "電話番号" %></th>
          <td>
            <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
          </td>
        </tr>
      </div>
      <div class="row">
        <tr>
          <th><%= f.label "パスワード（６文字以上）" %></th>
          <td>
            <%= f.password_field :password, autocomplete: "new-password" %>
          </td>
        </tr>
      </div>
      <div class="row">
        <tr>
          <th><%= f.label "パスワード（確認用）" %></th>
          <td>
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </td>
        </tr>
      </div>
      <div class="row">
        <tr>
          <th></th>
          <td>
            <%= f.submit "新規登録", class:'btn btn-success col-3' %>
          </td>
        </tr>
      </div>
    </table>
  <% end %>
  <h5>既に登録済みの方</h5>
  <p><span><%= render 'public/shared/links'%></span>からログインしてください。</p>

</div>
