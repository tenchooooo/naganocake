<h2>注文履歴詳細</h2>
<table>
  <p>注文情報</p>
  <tr><th>注文日</th><td><%= @order_detail.created_at.to_s(:datetime_jp) %></td></tr>
  <tr><th>転送先</th><td>〒<%= @order_detail.order.postal_code %> <br>
  <%= @order_detail.order.address %> <br>
  <%= @order_detail.order.name %></td></tr>
  <tr><th>支払方法</th><td><%= @order_detail.order.payment_method_i18n %></td></tr>
  <tr><th>ステータス</th><td><%=  %></td></tr>
</table>
<table>
  <p>請求金額</p>
  <tr><th>商品合計</th><td><%= @order_detail.order.total_payment - @order_detail.order.shipping_cost %></td></tr>
  <tr><th>配送料</th><td><%= @order_detail.order.shipping_cost %></td></tr>
  <tr><th>ご請求額</th><td><%= @order_detail.order.total_payment %></td></tr>
</table>
<table>
  <p>注文内容</p>
   <tr>
    <th>商品名</th>
    <th>単価(税込)</th>
    <th>個数</th>
    <th>小計</th>
    <th></th>
  </tr>
  <tr>
    <!--% @order_detail.each do |order_detail| %>-->
    <td><%= @order_detail.item.name %></td>
    <td><%= @order_detail.item.with_tax_price.to_s(:delimited) %></td>
    <td><%= @order_detail.amount %></td></td>
    <td><%= (@order_detail.item.with_tax_price * @order_detail.amount).to_s(:delimited) %></td>
    <!--% end %>-->
  </tr>
</table>