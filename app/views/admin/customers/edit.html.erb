<div class="container">
  <h2><%= @customer.full_name %>さんの会員情報編集</h2>
  <div class="row">
    <%= form_with model: @customer, url: admin_customer_path, method: :patch do |f| %>
    <table class="table table-borderless">
      <tr>
        <th>会員ID</th>
        <td><%= @customer.id %></td>
      </tr>
      <tr>
        <th>氏名</th>
        <td>
          <%= f.text_field :last_name %>
          <%= f.text_field :first_name %>  
        </td>
      </tr>
      <tr>
        <th>フリガナ</th>
        <td>
          <%= f.text_field :last_name_kana %>
          <%= f.text_field :first_name_kana %> 
        </td>
      </tr>
      <tr>
        <th><%= f.label "郵便番号" %></th>
        <td><%= f.text_field :postal_code %></td>
      </tr>
      <tr>
        <th><%= f.label "住所" %></th>
        <td><%= f.text_field :address, class:'col-sm-12' %></td>
      </tr>
      <tr>
        <th><%= f.label "電話番号" %></th>
        <td><%= f.text_field :telephone_number %></td>
      </tr>
      <tr>
        <th><%= f.label "メールアドレス" %></th>
        <td><%= f.email_field :email %></td>
      </tr>
      <tr>
        <th>会員ステータス</th>
        <td>
          <%= f.radio_button :is_deleted, false %>
          <%= f.label :is_deleted, '有効', value: false %>
          <%= f.radio_button :is_deleted, true %>
          <%= f.label :is_deleted, '無効', value: true %>
        </td>
      </tr>
      <tr>
        <th></th>
        <td><%= f.submit "変更を保存", class:'btn btn-success'=%></td>
      </tr>
    </table>
    <% end %>
  </div>
</div>



