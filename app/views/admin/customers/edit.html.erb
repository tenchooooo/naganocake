<% name = @customer.last_name + @customer.first_name %>
<h2><%= name %>さんの会員情報編集</h2>

<%= form_with model: @customer, url: admin_customer_path, method: :patch do |f| %>
  <p>会員ID <span><%= @customer.id %></span></p>
  <div class="field">
    <p>氏名
      <span>
        <%= f.text_field :last_name %>
        <%= f.text_field :first_name %>    
      </span>
    </p>
  </div>

  <div class="field">
    <p>フリガナ
      <span>
        <%= f.text_field :last_name_kana %>
        <%= f.text_field :first_name_kana %>  
      </span>
    </p>
  </div>

  <div class="field">
    <%= f.label "郵便番号" %>
    <%= f.text_field :postal_code %>
  </div>

  <div class="field">
    <%= f.label "住所" %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label "電話番号" %>
    <%= f.text_field :telephone_number %>
  </div>
  
  <div class="field">
    <%= f.label "メールアドレス" %>
    <%= f.email_field :email %>
  </div>
  
  <div>
    <p>会員ステータス
      <span>
        <%= f.radio_button :is_deleted, false %>
        <%= f.label :is_deleted, '有効', value: false %>
        <%= f.radio_button :is_deleted, true %>
        <%= f.label :is_deleted, '無効', value: true %>
      </span>
    </p>
  </div>
  <div class="actions">
    <%= f.submit "変更を保存" %>
  </div>
<% end %>