<div class="container">
  <h2><%= @customer.full_name %>さんの会員詳細</h2>
  <div class="row">
    <table class="table table">
      <tr>
        <th>会員ID</th>
        <td><%= @customer.id %></td>
      </tr>
      <tr>
        <th>氏名</th>
        <td><%= @customer.full_name %></td>
      </tr>
      <tr>
        <th>フリガナ</th>
        <td><%= @customer.full_name_kana %></td>
      </tr>
      <tr>
        <th>郵便番号</th>
        <td><%= @customer.postal_code %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <th>電話番号</th>
        <td><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= @customer.email %></td>
      </tr>
      <tr>
        <th>会員ステータス</th>
        <td><%= @customer.is_deleted ? '無効' : '有効'%></td>
      </tr>
      <tr>
        <th></th>
        <td>
          <%= link_to "編集する", edit_admin_customer_path(@customer.id), class:'btn btn-success' %>
        </td>
      </tr>
    </table>
  </div>
</div>




