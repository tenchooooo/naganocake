<h2>注文履歴一覧</h2>
<table>
  <tr>
    <th>購入日時</th>
    <th>購入者</th>
    <th>注文個数</th>
    <th>注文ステータス</th>
  </tr>
  <% @orders.each do |order| %>
  <tr>
    <td><%= order.created_at.to_s(:datetime_jp2) %></td>
    <td><%= order.customer.full_name %></td>
    <td><% order.order_details.each do |order_detail| %>
    <%= order_detail.amount %>
    <% end %></td>
    <td><%= order.status_i18n %></td>
  </tr>
<% end %>
</table>