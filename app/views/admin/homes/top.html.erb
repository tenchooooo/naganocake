<h4>注文履歴一覧</h4>
<table>
  <tr>
    <th>購入日時</th>
    <th>購入者</th>
    <th>注文個数</th>
    <th>注文ステータス</th>
  </tr>
  <% @orders.each do |order| %>
  <tr>
    <td><%= link_to order.created_at.to_s(:datetime_jp2), admin_order_path(order.id) %></td>
    <td><%= order.customer.full_name %></td>
    <td><%= order.order_details.sum(:amount) %></td>
    <td><%= order.status_i18n %></td>
  </tr>
<% end %>
</table>